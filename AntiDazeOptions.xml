<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">
	<Script file="AntiDazeOptions.lua"/>
	<Frame name="AntiDazeOptionsFrame" toplevel="true" frameStrata="DIALOG" movable="true" enableMouse="true" hidden="true" parent="UIParent" enableKeyboard="true">
		<Size>
			<AbsDimension x="400" y="200"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="AntiDazeOptionsFrameHeader" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="336" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString inherits="GameFontNormal" text="AD_OPTIONS_TITLE">
					<Anchors>
						<Anchor point="TOP" relativeTo="AntiDazeOptionsFrameHeader">
							<Offset>
								<AbsDimension x="0" y="-14"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<CheckButton name="AntiDazeOptionsFrameADtoggle" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="20" y="-40"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(self:GetName().."Text"):SetText(OPT_CANCELING);
					</OnLoad>
					<OnClick>
						AD_Toggle();
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="AntiDazeOptionsFrameADCCheet" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="40" y="-80"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(self:GetName().."Text"):SetText(OPT_CHEETAH);
					</OnLoad>
					<OnClick>
						ADCCheet_Toogle();
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="AntiDazeOptionsFrameADCPack" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="40" y="-100"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(self:GetName().."Text"):SetText(OPT_PACK);
					</OnLoad>
					<OnClick>
						ADCPack_Toogle();
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="AntiDazeOptionsFrameADCPackPets" inherits="OptionsCheckButtonTemplate">
				<Size>
					<AbsDimension x="20" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="55" y="-125"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(self:GetName().."Text"):SetText(OPT_PACKPETS);
					</OnLoad>
					<OnClick>
						ADCPackPets_Toogle();
					</OnClick>
				</Scripts>
			</CheckButton>

			<Button name="AntiDazeOptionsFrameDone" inherits="OptionsButtonTemplate" text="Done">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						ADOptions_Toggle();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				ADOptions_OnLoad();
			</OnLoad>
			<OnShow>
				ADOptions_OnShow();
			</OnShow>
			<OnHide>
				ADOptions_OnHide();
			</OnHide>
		</Scripts>
	</Frame>
</Ui>
